{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowJs": true,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react"
    },
    "include": ["./src"],
    "exclude": ["./node_modules"]
}
